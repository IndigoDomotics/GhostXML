<?xml version="1.0"?>
<PluginConfig>

    <Field id="infoLabel0" type="label" fontColor="black">
        <Label>GhostXML Plugin</Label>
    </Field>

    <Field id="space0" type="label" fontColor="black" fontSize="small">
        <Label>Developed by: Indigo Users</Label>
    </Field>

    <Field id="space4" type="label" fontColor="black" alignText="right">
        <Label>Server Timeout:</Label>
    </Field>

    <Field id="sep2" type="separator"/>

    <Field id="space5" type="label" fontSize="small" fontColor="black">
        <Label>The amount of time that the plugin will wait for each source to respond.</Label>
    </Field>

    <Field id="configMenuServerTimeout" type="menu" defaultValue="15" tooltip="Select preference for how long the plugin waits for the server to respond.">
        <Label>Server Timeout:</Label>
        <List>
            <Option value="5">5 Seconds</Option>
            <Option value="10">10 Seconds</Option>
            <Option value="15">15 Seconds</Option>
            <Option value="20">20 Seconds</Option>
            <Option value="25">25 Seconds</Option>
            <Option value="30">30 Seconds</Option>
        </List>
    </Field>

    <Field id="space6" type="label"/>

    <Field id="space7" type="label" alignText="right">
        <Label>Update Notification:</Label>
    </Field>

    <Field id="sep3" type="separator"/>

    <Field id="space8" type="label" fontSize="small">
        <Label>Receive an email alerting you to plugin updates.</Label>
    </Field>

    <Field id="updaterEmailsEnabled" type="checkbox" defaultValue="false" tooltip="Enables (disables) email notifications.">
        <Label/>
        <Description>Enable/Disable</Description>
    </Field>

    <Field id="updaterEmail" type="textfield" tooltip="Please enter the email address to receive notifications of updates to the plugin.">
        <Label>Email address:</Label>
    </Field>

    <Field id="space9" type="label"/>

    <Field id="debugHeaderSpace" type="label" fontSize="mini"/>

    <Field id="debugLabel" type="label" fontColor="black" alignText="right">
        <Label>Debugging (optional)</Label>
    </Field>

    <Field id="separator01" type="separator"/>

    <Field id="space06" type="label" fontSize="small" alignWithControl="True">
        <Label>Always be careful when posting debug output to the forums or other public places. You should review it to ensure that it doesn't contain sensitive information.</Label>
    </Field>

    <Field id="showDebugLevel" type="menu" defaultValue="30" tooltip="Controls the amount of debug information written to the log.">
        <Label>Debug level:</Label>
        <Description/>
        <List>
            <Option value="10">Debugging Messages</Option>
            <Option value="20">Informational Messages</Option>
            <Option value="30">Warning Messages</Option>
            <Option value="40">Error Messages</Option>
            <Option value="50">Critical Errors Only</Option>
        </List>
    </Field>

    <Field id="space07" type="label" fontSize="mini" alignWithControl="True">
        <Label>Debugging Messages - Step by step plugin logging.
Informational Messages - Useful information about plugin health.
Warning Messages - Typically temporary conditions.
Error Messages - Conditions you might want to address.
Critical Errors Only - Critical errors should probably be reported.
        </Label>
    </Field>

    <Field id="oldDebugLevel" type="textfield" defaultValue="20" hidden="true">
    </Field>

</PluginConfig>
